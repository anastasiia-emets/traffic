<Window x:Class="HaarCascadeDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HaarCascadeDetector"
        mc:Ignorable="d"
        Title="Object detection with Haar Cascade" Height="300.38" Width="525">
    <Grid>
        <GroupBox x:Name="gbFile" Header="Load file" Margin="0,10,10,0" VerticalAlignment="Top" Height="159" HorizontalAlignment="Right" Width="155">
            <Grid Margin="10,10,10,10">
                <Button x:Name="btnLoadImage" Content="Load Image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="103" Click="btnLoadImage_Click"/>
                <Button x:Name="btnLoadCascade" Content="Load Cascade" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="103" Click="btnLoadCascade_Click"/>

            </Grid>
        </GroupBox>
        <Image x:Name="imgResult" Margin="10,10,170,8"/>

    </Grid>
</Window>
